<div class="form">
  <h2 style="text-align: center; margin: 20px;">List a new feeling for sale</h2>

    <%= simple_form_for (@feeling)do |f| %>
    <%= f.input :title, placeholder: 'Title' %>
    <%= f.input :category, collection: Feeling::CATEGORIES %>
    <%= f.input :description, placeholder: 'Description' %>
    <%= f.input :sideeffects, placeholder: 'Side Effects' %>
    <%= f.input :recommendedto, placeholder: 'Recommended to' %>
    <%= f.input :care, placeholder: 'Do not mix it with' %>
    <%= f.input :price, placeholder: 'Price' %>
     <%= f.input :image, as: :file, required: false %>
 <div class="form-actions">
 <div class="row justify-content-end">
<div class="col-2 d-flex justify-content-end">
  <div class="glow-on-hover" style="border: 1px solid #CED4D9">
    <%= f.submit class: 'btn' %>
        </div>
  </div>
</div>
    <% end %>
  </div>
    </div>

