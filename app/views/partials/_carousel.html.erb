<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag "01.jpg", alt: "Slide 01", class: "d-block w-100"  %>
      <div class="carousel-caption d-md-block">
        <h2><strong>"Money can't buy happiness"</strong></h2>
        <h5>Yeah, right...</h5>
        <%= link_to 'Browse all of our feelings', feelings_path, class: "btn btn-outline-light" %>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "02.jpg", alt: "Slide 02", class: "d-block w-100"  %>
        <div class="carousel-caption d-md-block">
          <h2><strong>Feeling overwhelmed?</strong></h2>
          <h5>Check out our serenity packages...</h5>
          <%= link_to 'Browse all of our feelings', feelings_path, class: "btn btn-outline-light" %>
        </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "03.jpg", alt: "Slide 03", class: "d-block w-100"  %>
          <div class="carousel-caption d-md-block">
            <h2><strong>Jealousy can be inspired</strong></h2>
            <h5>With just a few clicks...</h5>
            <%= link_to 'Browse all of our feelings', feelings_path, class: "btn btn-outline-light" %>
        </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
